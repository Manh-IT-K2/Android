<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChiTietSanPhamActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChiTietSp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00BCD4"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewChiTietSp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:background="#F6F5F5"
            android:padding="20dp"
            android:src="@color/cardview_dark_background"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_TenChiTietSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên sản phẩm"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textView_GiaChiTietSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gia san pham"
                android:textColor="#3160EC"
                android:textSize="20sp"></TextView>

            <Spinner
                android:id="@+id/spinnerChiTietSp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"></Spinner>

            <ImageButton
                android:id="@+id/ButtonMuaChiTietSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:src="@drawable/icon_shoppingcart"
                android:text="Thêm Giỏ Hàng"></ImageButton>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BFBDBF"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mô tả sản phẩm"
            android:layout_marginLeft="5dp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="30sp"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewMoTaChiTietSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"></TextView>
        </ScrollView>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="©Do not reup"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="#7E7C7C"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>