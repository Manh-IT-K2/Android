<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/background_login"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonBackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_home"
            android:src="@drawable/icon_home"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edt_dk_FullName"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableRight="@drawable/icon_fullname"
            android:hint="Fullname"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></EditText>
        <EditText
            android:id="@+id/edt_dk_Username"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableRight="@drawable/icon_user"
            android:hint="username"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></EditText>


        <EditText
            android:id="@+id/edt_dk_PassWord"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableRight="@drawable/icon_pass"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></EditText>

        <EditText
            android:id="@+id/edt_dk_RepassWord"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableRight="@drawable/icon_pass"
            android:hint="Repassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></EditText>
        <EditText
            android:id="@+id/edt_dk_TextEmail"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableRight="@drawable/icon_email"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></EditText>

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20sp"
            android:text="Login ?"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <Button
            android:id="@+id/btn_DK_Register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button"
            android:text="Register"
            android:textSize="20sp"></Button>
    </LinearLayout>
</LinearLayout>