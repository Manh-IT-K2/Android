<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_login"
        android:layout_width="match_parent"
        android:layout_height="770dp">
        <ImageButton
            android:id="@+id/imageButtonBackHome"
            android:src="@drawable/icon_home"
            android:layout_margin="10dp"
            android:background="@drawable/custom_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageButton>
        <TextView
            android:text="Register"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/editextUserName"
            android:padding="20dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/icon_user"
            android:layout_width="match_parent"
            android:layout_height="50sp"></EditText>
        <EditText
            android:padding="20dp"
            android:id="@+id/editextPassWord"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/icon_pass"
            android:layout_width="match_parent"
            android:layout_height="50sp"></EditText>
        <EditText
            android:padding="20dp"
            android:id="@+id/editextRePassWord"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/icon_pass"
            android:layout_width="match_parent"
            android:layout_height="50sp"></EditText>
        <TextView
            android:id="@+id/textViewLogin"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Login ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:id="@+id/buttonRegiter"
            android:text="Register"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:layout_width="200dp"
            android:layout_height="50dp"></Button>
        <TextView
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="or singin with"
            android:textStyle="bold|italic"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginTop="25dp">
            <ImageButton
                android:layout_marginLeft="100dp"
                android:id="@+id/imageButtonFB"
                android:src="@drawable/icon_facebook"
                android:background="@null"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>
            <ImageButton
                android:id="@+id/imageButtonGG"
                android:src="@drawable/icon_google"
                android:background="@null"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>
            <ImageButton
                android:id="@+id/imageButtonIns"
                android:src="@drawable/icon_instagram"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>